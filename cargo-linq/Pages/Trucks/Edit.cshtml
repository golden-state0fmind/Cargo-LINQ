@page
@model cargolinq.Pages.Trucks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Freight Trucks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Truck.Id" />
            <div class="form-group">
                <label asp-for="Truck.DriverName" class="control-label"></label>
                <input asp-for="Truck.DriverName" class="form-control" />
                <span asp-validation-for="Truck.DriverName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Truck.LicensePlate" class="control-label"></label>
                <input asp-for="Truck.LicensePlate" class="form-control" />
                <span asp-validation-for="Truck.LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Truck.TruckModel" class="control-label"></label>
                <input asp-for="Truck.TruckModel" class="form-control" />
                <span asp-validation-for="Truck.TruckModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Truck.TruckMileage" class="control-label"></label>
                <input asp-for="Truck.TruckMileage" class="form-control" />
                <span asp-validation-for="Truck.TruckMileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}